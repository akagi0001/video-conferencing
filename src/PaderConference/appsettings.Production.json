{
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.RollingFile"],
    "MinimumLevel": "Warning",
    "WriteTo": [
      { "Name": "Console" },
      { "Name": "RollingFile", "Args": { "pathFormat": "logs/log-{Date}.txt" } }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  }
}
